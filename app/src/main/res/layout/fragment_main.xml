<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.prachi.knowyourstation.MainActivity$PlaceholderFragment">

    <EditText
        android:hint="enter pnr"
        android:padding="5dp"
        android:id="@+id/Pnr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:text="--OR--"
        android:textAlignment="center"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:hint="enter train number"
        android:padding="5dp"
        android:id="@+id/TrainNo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/search"
        android:text="search"

        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <View
        android:layout_marginTop="50dp"
        android:background="#000000"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <EditText
        android:id="@+id/pnrstatus"
        android:hint="check pnr status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:layout_gravity="center"
        android:text="check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</LinearLayout>
